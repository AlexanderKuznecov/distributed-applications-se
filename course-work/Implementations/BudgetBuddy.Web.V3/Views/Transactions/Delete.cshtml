@model BudgetBuddy.Web.V3.Models.TransactionViewModel

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2 class="mb-4 text-danger">Are you sure you want to delete this transaction?</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.Type</dd>

            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.CategoryName</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</div>
